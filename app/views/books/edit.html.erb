<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
          <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
            <h6>Title</h6>
              <%= f.text_field :title %>
            <h6>Opinion</h6>
              <%= f.text_area :body %>
            <h6></h6>
              <%= f.submit 'Update Book' %>
          <p>
            <%= link_to "Show", book_path(@book.id) %>
            |
            <%= link_to "Back", books_path %>
          </p>
          <% end %>

          <% if @book.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@book.errors.count, "error")%>
              prohibited this book from being saved:</h2>
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>
