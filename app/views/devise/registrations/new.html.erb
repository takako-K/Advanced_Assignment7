
<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postcode, '郵便番号' %><br>
    <%= f.text_field :postcode, autofocus: true, placeholder: 'postcode', class: 'postcode', id: "address_zipcode" %>
  </div>

  <div class="field">
    <%= f.label :prefecture_name, '都道府県' %><br>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'address', id: "address_prefecture_name" %>
  </div>

  <div class="field">
    <%= f.label :address_city, '市区町村' %><br>
    <%= text_field :address_city, autofocus: true, placeholder: 'address_city', class: 'address', id: "address_city" %>
  </div>

  <div class="field">
    <%= f.label :address_street, '番地' %><br>
    <%= f.text_field :address_street, autofocus: true, placeholder: 'address_street', class: 'address', id: "address_street" %>
  </div>

  <div class="field">
    <%= f.label :address_building, '建物' %><br>
    <%= text_field :address_building, autofocus: true, placeholder: 'address_building', class: 'address' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
