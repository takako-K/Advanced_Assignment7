          <label for="inputImage">Image</label>
            <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
            </p>
          </div>
          <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
            <p><%= f.text_area :introduction %>
            </p>
          </div>
          <div class="form-group">
